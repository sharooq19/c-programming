#include <stdio.h>
int main() 
{
    int n, sum = 0;
    scanf("%d", &n);
    if (n < 1 || n > 20) 
    {
    printf("Enter a Valid Input!!!!!!!!!!!!!!!!!!\n");
    }
    else 
    {
    for (int i = 1; i <= n; i++) {
    sum += i;
    }
    printf("The sum of numbers from 1 to %d : %04d\n", n, sum);
    }
    return 0;
}
